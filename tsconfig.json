{
    "compilerOptions": {
      "baseUrl": "src",
      "module": "commonjs",
      "noImplicitReturns": true,
      "noUnusedLocals": true,
      "esModuleInterop": true,
      "outDir": "lib",
      "sourceMap": true,
      "strict": true,
      "target": "es2015",
      "experimentalDecorators": true,
      "declaration": true,
      "emitDeclarationOnly": false,
      "lib": [
        "dom",
        "es5",
        "es6",
        "es7",
        "es2017",
        "es2016",
        "esnext",
        "ESNext.AsyncIterable"
      ],
      "jsx": "react",
      "types": ["react", "react-dom", "styled-components", "jest"]
    },
    "compileOnSave": true,
    "include": [
      "src/**/*"
    ],
  }